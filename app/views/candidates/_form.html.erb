<%= form_with(model: candidate, data: { action: "ajax:success->candidates#createSuccess" }) do |form| %>
  <% if candidate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

      <ul>
        <% candidate.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.text_field :email, data: { target: "candidates.emailBody" }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Candidate email..." %>
  </div>

  <div class="mb-4">
    <%= form.text_field :name, data: { target: "candidates.nameBody" }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Candidate name..." %>
  </div>

  <div class="mb-4">
    <%= form.collection_select :questionnaire_id, Questionnaire.all, :id, :title, { prompt: true }, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
  </div>

  <div class="actions">
    <%= form.submit class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded cursor-pointer" %>
  </div>
<% end %>
