<div class="grid grid-cols-4 mb-2 border-b border-gray-200 p-2">
  <div class="inline col-span-2">
    <%= question.question %>
  </div>

  <div class="inline text-right">
    <%= question.allotted_score %>
  </div>

  <div class="inline text-right">
    <%= link_to 'Edit', edit_question_path(question) %>
    <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
